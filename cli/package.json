  "author": "blake365",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blake365/promisance-rogue.git"
  },
  "bugs": {
    "url": "https://github.com/blake365/promisance-rogue/issues"
  },
  "homepage": "https://github.com/blake365/promisance-rogue#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ink": "^5.0.1",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
