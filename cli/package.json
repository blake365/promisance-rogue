{
  "name": "promisance-rogue",
  "version": "0.1.0",
  "description": "A roguelike turn-based strategy game in the terminal. Build your empire, manage resources, cast spells, and conquer AI opponents.",
  "type": "module",
  "bin": {
    "promisance-rogue": "./dist/index.js",
    "prom-rogue": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
